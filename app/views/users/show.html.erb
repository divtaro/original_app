<%= render "shared/header" %>
<%# <div class='main'> %>
<div class="main">

  <%#= "#{@user.user_name}さんの投稿一覧" %>
 <div class='item-contents'>
    <h2 class='title'>
    <%= "#{@user.user_name}さんのPhotograph" %> 
    
    </h2>
    <ul class='item-lists'>
      <% @posts.each do |post| %>
        <li class='list'>
         <%= link_to post_path(post.id) do %>
          <div class='post-img-content'>
            <%= image_tag post.image, class: "post-img" %>
              <%# <div class='item-info'> %>
                <div class='post-title-show'>
                  <%= post.title %>
                </div>
              <%# </div> %>
          </div>
        <% end %>
          
        <div class='contributor'>  
          <%= post.user.user_name %>
        </div>
        <div class='like'>  
          <%#= link_to post.user.user_name, user_path(post.user) 行きたいを載せる%> 
          <div id="like_btn_<%= post.id %>">
            <%= render 'likes/like_index', post: post %>
			    </div>
        </div>
      <% end %>
      </li>
    </ul>

    <%#= いいね一覧 %> 
    <h2 class='like-title'>
    <%= "#{@user.user_name}さんが行きたい場所一覧" %> 
    
    </h2>
    <ul class='item-lists'>
      <% @like_posts.each do |post| %>
        <li class='list'>
         <%= link_to post_path(post.id) do %>
          <div class='post-img-content'>
            <%= image_tag post.image, class: "post-img" %>
              <%# <div class='item-info'> %>
                <div class='post-title-show'>
                  <%= post.title %>
                </div>
              <%# </div> %>
          </div>
        <% end %>
          
        <div class='contributor'>  
          <%= post.user.user_name %>
        </div>
        <div class='like'>  
          <%#= link_to post.user.user_name, user_path(post.user) 行きたいを載せる%> 
          <div id="like_btn_<%= post.id %>">
            <%= render 'likes/like_index', post: post %>
			    </div>
        </div>
      <% end %>
      </li>
    </ul>
  </div>
<%#= render "shared/footer" %>