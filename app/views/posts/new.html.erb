<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('impression spot-logo-color.png' , size: '300x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">投稿ページ</h2>
    <%= form_with model: @post, url: posts_path, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        感動の1枚
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          <%# クリックしてファイルをアップロード %>
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"例）新倉山浅間公園（必須 40文字まで)", maxlength:"40" %>
      
      <div class="items-explain">
        <div class="weight-bold-text">
          感動ポイント
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :impression_point, class:"items-text", id:"item-info", placeholder:"例）富士山、五重塔、桜を一目に見ることができます（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

     <div class="items-detail"> 
      <div class="weight-bold-text">
        撮影時期
        <span class="indispensable">必須</span>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          撮影月
          <span class="indispensable">必須</span>
        </div>  
        <%= f.collection_select(:shooting_month_id, ShootingMonth.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
         <div class="weight-bold-text">
          撮影週  
          <span class="indispensable">必須</span>
        </div> 
        <%= f.collection_select(:shooting_week_id, ShootingWeek.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>

    <div class="items-detail">
    
      <div class="weight-bold-text">周辺の駐車場（任意）</div>
      <div class="form">
        <div class="weight-bold-text">
          駐車場の有無（任意）
          <%# <span class="indispensable">必須</span> %>
        </div>




        <%= f.collection_select(:parking_presence_id, ParkingPresence.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          駐車場代（任意）
          <%# <span class="indispensable">必須</span> %>
        </div>
        <%= f.collection_select(:parking_fee_id, ParkingFee.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>

    <div class="items-detail">
      <div class="weight-bold-text">公共交通機関（任意）</div>
      <div class="form">
        <div class="weight-bold-text">
          最寄り駅（任意）
          <%# <span class="indispensable">必須</span> %>
